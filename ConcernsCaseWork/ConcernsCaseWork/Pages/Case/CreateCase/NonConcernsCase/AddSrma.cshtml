@page "/case/create/nonconcerns/srma"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NetEscapades.AspNetCore.SecurityHeaders
@model AddSrmaPageModel

@{
    ViewData["Title"] = "Add srma";
	ViewData["CancelBackLink"] = "/case/create/nonconcerns/action";
    var nonce = HttpContext.GetNonce();
}

<div class="govuk-width-container">
    <partial name="_BannerError" />

    <div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			@if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
			{
				<partial name="_Error" />
			}
			else
			{
				<div tabindex="-1" role="group" id="errorSummary" class="govuk-error-summary moj-hidden" aria-labelledby="error-summary-title" data-module="error-summary"></div>

				<partial name="_ValidationErrors"/>

				<h1 class="govuk-heading-l">
					<span class="govuk-caption-m">Add to case</span>
					School Resource Management Adviser (SRMA)
				</h1>

				<form role="form" method="post" id="add-srma-form" novalidate>

					@* Status *@
					<div class="govuk-form-group govuk-!-margin-top-9">
						<fieldset class="govuk-fieldset">
							<legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
								<h2 class="govuk-heading-m">What is the status of the SRMA?</h2>
							</legend>
							<span asp-validation-for="@Model.Status" class="govuk-error-message"></span>
							<div class="govuk-radios" data-module="govuk-radios">
								@{
									int id = 0;
								}
								@foreach (var status in Model.SRMAStatuses)
								{
									var idStr = id++ == 0 ? "status" : "status-" + id;
									<div class="govuk-radios__item">
										<input class="govuk-radios__input" id="@idStr" name="status" type="radio" value="@status.Id">
										<label class="govuk-label govuk-radios__label" for="@idStr">
											<span>
												@status.Text
											</span>
										</label>
									</div>
								}
							</div>
						</fieldset>
					</div>

					@* date *@
					<div class="govuk-form-group govuk-!-margin-top-9">
						<fieldset class="govuk-fieldset">
							<h2 class="govuk-heading-m">When was the trust contacted with SRMA dates?</h2>
							<span asp-validation-for="@Model.OfferedDate" class="govuk-error-message"></span>
							<div class="govuk-date-input" id="dtr">
								<div class="govuk-date-input__item">
									<div class="govuk-form-group">
										<label class="govuk-label govuk-date-input__label" asp-for="OfferedDate.Day">
											Day
										</label>
										<input asp-for="OfferedDate.Day" class="govuk-input govuk-date-input__input govuk-input--width-2"
											   type="text" maxlength="2" inputmode="numeric" />
									</div>
								</div>
								<div class="govuk-date-input__item">
									<div class="govuk-form-group">
										<label class="govuk-label govuk-date-input__label" asp-for="OfferedDate.Month">
											Month
										</label>
										<input asp-for="OfferedDate.Month" class="govuk-input govuk-date-input__input govuk-input--width-2"
											    type="text" maxlength="2" inputmode="numeric" />
									</div>
								</div>
								<div class="govuk-date-input__item">
									<div class="govuk-form-group">
										<label class="govuk-label govuk-date-input__label" asp-for="OfferedDate.Year">
											Year
										</label>
										<input asp-for="OfferedDate.Year" class="govuk-input govuk-date-input__input govuk-input--width-4"
											  type="text" maxlength="4" inputmode="numeric" />
									</div>
								</div>
							</div>
						</fieldset>
					</div>

					@* Notes *@
					<div class="govuk-character-count govuk-!-margin-top-9" data-module="govuk-character-count" data-maxlength="@Model.NotesMaxLength">
						<div class="govuk-form-group">
							<h2 class="govuk-heading-m">Notes</h2>
							<textarea asp-for="Notes" class="govuk-textarea govuk-js-character-count concern-auto-resize" rows="3" aria-describedby="srma-notes-info"></textarea>
						</div>
						<div id="@nameof(Model.Notes)-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
							You can enter up to @Model.NotesMaxLength characters
						</div>
					</div>

					<div class="govuk-button-group">
						<button data-prevent-double-click="true" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button" role="button" id="add-srma-button">
							Continue
						</button>
						<partial name="_Cancel" />
					</div>

				</form>

				<script type="application/javascript" nonce="@nonce">
					$(function () {
						autoResizer();
					});
				</script>
			}

		</div>
    </div>
</div>

