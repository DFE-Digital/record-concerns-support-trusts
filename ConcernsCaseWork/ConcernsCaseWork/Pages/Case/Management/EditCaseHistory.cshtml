@page "/case/{urn:long}/management/casehistory"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NetEscapades.AspNetCore.SecurityHeaders
@model ConcernsCaseWork.Pages.Case.Management.EditCaseHistoryPageModel

@{
	ViewData["Title"] = "Edit case history";
	ViewData["CancelBackLink"] = Model.ReferrerUrl;
	var nonce = HttpContext.GetNonce();
}

<div class="govuk-width-container">
	<partial name="_BannerError"/>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			<h1 class="govuk-heading-l">
				Edit case history
			</h1>

			@if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
            {
            	<partial name="_Error"/>
            }
			else
			{
				<form role="form" asp-page-handler="CaseHistory" method="post" id="case-history-form" novalidate>
					
					<partial name="_ValidationErrors"/>

					<div class="govuk-character-count govuk-!-margin-top-9" data-module="govuk-character-count" data-maxlength="4000">
						<div class="govuk-form-group">
							<textarea class="govuk-textarea govuk-js-character-count concern-auto-resize" asp-for="CaseHistory" rows="3" aria-describedby="@nameof(Model.CaseHistory)">@Model.CaseHistory</textarea>
						</div>

						<div id="@nameof(Model.CaseHistory)-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
							You can enter up to 4000 characters
						</div>
					</div>

					<!--Button group-->
					<div class="govuk-button-group">
						<button data-prevent-double-click="true" class="govuk-button" data-module="govuk-button">
							Apply
						</button>
						<partial name="_Cancel"/>
					</div>

				</form>

				<script type="application/javascript" nonce="@nonce">
					$(function () {	
						autoResizer();
					});
				</script>
			}
		</div>
	</div>
</div>
