@page "/case/{urn:long}/management/casehistory"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NetEscapades.AspNetCore.SecurityHeaders
@model ConcernsCaseWork.Pages.Case.Management.EditCaseHistoryPageModel

@{
	ViewData["Title"] = "Edit case history";
	ViewData["CancelBackLink"] = Model.ReferrerUrl;
	var nonce = HttpContext.GetNonce();
}

<div class="govuk-width-container">
	<partial name="_BannerError"/>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			<h1 class="govuk-heading-l">
				Edit case history
			</h1>

			@if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
            {
            	<partial name="_Error"/>
            }
			else
			{
				<div tabindex="-1" role="group" id="errorSummary" class="govuk-error-summary moj-hidden" aria-labelledby="error-summary-title" data-module="error-summary"></div>
				
				<form role="form" asp-page-handler="CaseHistory" method="post" id="case-history-form" novalidate>

					<div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="4300">
						<div class="govuk-form-group">
							<textarea class="govuk-textarea govuk-js-character-count concern-auto-resize" id="case-history" name="case-history" rows="3" aria-describedby="case-history">@Model.CaseHistory</textarea>
						</div>

						<div id="case-history-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
							You can enter up to 4300 characters
						</div>
					</div>

					<!--Button group-->
					<div class="govuk-button-group">
						<button data-prevent-double-click="true" class="govuk-button" data-module="govuk-button" data-testid="save-case">
							Apply
						</button>
						<partial name="_Cancel"/>
					</div>

				</form>

				<script type="application/javascript" nonce="@nonce">
					$(function () {	
						let validator = formValidator($("#case-history-form")[0]);
						addCaseHistoryValidator(validator);
						
						autoResizer();
					});
				</script>
			}
		</div>
	</div>
</div>
