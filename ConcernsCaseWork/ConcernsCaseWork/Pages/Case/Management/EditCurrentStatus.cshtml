@page "/case/{urn:long}/management/edit_current_status"
@using ConcernsCaseWork.Constants;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NetEscapades.AspNetCore.SecurityHeaders
@model ConcernsCaseWork.Pages.Case.Management.EditCurrentStatusPageModel

@{
	ViewData["Title"] = "Edit Current status";
	var nonce = HttpContext.GetNonce();
    ViewData[ViewDataConstants.CancelBackLink] = $"/case/{Model.CaseUrn}/management";

}

<div class="govuk-width-container">
	<partial name="_BannerError"/>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			@if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
            {
            	<partial name="_Error"/>
            }
			else
			{
                <partial name="_ValidationErrors" />

                <h1 class="govuk-heading-l">
                    Edit current status
                </h1>

				<form role="form" asp-page-handler="editCurrentStatus" method="post" id="current-status-form" novalidate>

                    <partial name="Components/_TextArea" model="Model.CurrentStatus" />

					<!--Button group-->
					<div class="govuk-button-group">
						<button data-prevent-double-click="true" class="govuk-button" data-module="govuk-button" data-testid="apply">
							Apply
						</button>
						<partial name="_Cancel"/>
					</div>

				</form>

				<script type="application/javascript" nonce="@nonce">
					$(function () {	
						autoResizer();
					});
				</script>
			}
		</div>
	</div>
</div>
