@page "/case/{urn:long}/management/edit-territory"
@using ConcernsCaseWork.API.Contracts.Enums
@using ConcernsCaseWork.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ConcernsCaseWork.Pages.Case.Management.EditTerritoryPageModel

@{
	ViewData["Title"] = "Edit case SFSO territory";
	ViewData["CancelBackLink"] = Model.ReferrerUrl;
}

<div class="govuk-width-container">
	<partial name="_BannerError"/>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			<h1 class="govuk-heading-l">
				Change territory
			</h1>

			@if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
            {
            	<partial name="_Error"/>
            }
			else
			{
                <partial name="_ValidationErrors" />
				
				<form role="form" method="post" id="case-territory-form" novalidate>

                    <partial name="Components/_RadioList" model="Model.Territory" />

					<!--Button group-->
					<div class="govuk-button-group">
						<button data-prevent-double-click="true" data-testid="apply_territory_btn" class="govuk-button" data-module="govuk-button">
							Apply
						</button>
						<partial name="_Cancel"/>
					</div>

				</form>
			}
		</div>
	</div>
</div>
