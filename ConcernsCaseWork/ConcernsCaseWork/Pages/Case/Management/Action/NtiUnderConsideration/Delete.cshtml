@page "/case/{urn:long}/management/action/NtiUnderConsideration/{ntiUCId:long}/delete/{handler?}"

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ConcernsCaseWork.Pages.Case.Management.Action.NtiUnderConsideration.DeletePageModel

@{
    ViewData["Title"] = "NTI: Under consideration deletion";
}

<partial name="_BannerError" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column">

        <h1 class="govuk-heading-l">
            <span class="govuk-caption-m">Case ID @Model.CaseModel.Urn</span>
            Delete NTI: Under Consideration
        </h1>

        <div class="govuk-warning-text">
            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
            <strong class="govuk-warning-text__text">
                <span class="govuk-warning-text__assistive">Warning</span>
                This NTI: Under Consideration cannot be recovered
            </strong>
        </div>

        @if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
        {
            <partial name="_Error" />
        }
        else
        {

            <dl class="govuk-summary-list summary-list-margin-0 govuk-!-margin-top-6">

                <!-- Trust -->
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Trust
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.TrustDetailsModel.GiasData.GroupName
                    </dd>
                    <dd class="govuk-summary-list__actions"></dd>
                </div>

                <!-- NTI:UC -->
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Date NTI: Under consideration opened
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.DateOpened
                    </dd>
                    <dd class="govuk-summary-list__actions"></dd>
                </div>
            </dl>

            <div tabindex="-1" role="group" id="errorSummary" class="govuk-error-summary moj-hidden" aria-labelledby="error-summary-title" data-module="error-summary"></div>

            <div class="govuk-form-group govuk-!-margin-top-9">
                <p class="govuk-body">Do you still want to delete this NTI: Under Consideration?</p>

                <div class="govuk-button-group">
                    <a data-prevent-double-click="true"
                       class="govuk-button govuk-!-margin-top-6"
                       asp-page-handler="DeleteNTIUC"
                       data-module="govuk-button"
                       role="button"
                       data-testid="delete-nti-uc-button">
                        Delete NTI: Under Consideration
                    </a>
                    <a data-prevent-double-click="true" class="govuk-link" asp-page-handler="Cancel" data-module="govuk-button" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        }
    </div>
</div>
