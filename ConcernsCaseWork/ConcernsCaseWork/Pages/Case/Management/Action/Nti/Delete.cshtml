@page "/case/{urn:long}/management/action/nti/{ntiId:long}/delete"
@using ConcernsCaseWork.Constants;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NetEscapades.AspNetCore.SecurityHeaders
@model ConcernsCaseWork.Pages.Case.Management.Action.Nti.DeletePageModel

@{
    ViewData["Title"] = "Delete NTI";
    var nonce = HttpContext.GetNonce();
    ViewData[ViewDataConstants.CancelBackLink] = $"/case/{@Model.CaseUrn}/management/action/nti/{Model.NtiId}";
}

<div class="govuk-width-container">
    <partial name="_BannerError" />

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            @if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
            {
                <partial name="_Error" />
            }
            else
            {
                <partial name="_ValidationErrors" />

                <h1 class="govuk-heading-l">
                    <span class="govuk-caption-m">Case ID @RouteData.Values["urn"]</span>
                    Delete NTI (Notice To Improve)
                </h1>

                <div class="govuk-warning-text">
                    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                    <strong class="govuk-warning-text__text">
                        <span class="govuk-warning-text__assistive">Warning</span>
                        This action cannot be reversed. Make sure this NTI should be permanently deleted before continuing
                    </strong>
                </div>

                <form role="form" method="post" id="delete-nti-form" novalidate>

                    <p class="govuk-body">Do you still want to delete this NTI: Notice to Improve?</p>

                    <div class="govuk-button-group">
                        <button data-prevent-double-click="true" class="govuk-button govuk-button--warning" data-module="govuk-button" role="button" id="delete-nti-button">
                            Delete NTI: Notice To Improve
                        </button>
                        <partial name="_Cancel" />
                    </div>

                </form>
            }
        </div>
    </div>
</div>