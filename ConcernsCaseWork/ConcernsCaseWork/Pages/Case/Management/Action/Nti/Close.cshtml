@page "/case/{urn:long}/management/action/nti/{ntiId:long}/close"
@model ConcernsCaseWork.Pages.Case.Management.Action.Nti.ClosePageModel

@{
    ViewData["Title"] = "Close NTI Warning Letter";
    var nonce = HttpContext.GetNonce();
}

<div class="govuk-width-container">
    <partial name="_BannerError" />

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            @if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
            {
                <partial name="_Error" />
            }
            else
            {
                <div tabindex="-1" role="group" id="errorSummary" class="govuk-error-summary moj-hidden" aria-labelledby="error-summary-title" data-module="error-summary"></div>

                @if (!string.IsNullOrEmpty((string)TempData.Peek("NTI.Message")))
                {
                    <div tabindex="-1" role="group" id="errorSummary" class="govuk-error-summary" data-module="error-summary" aria-labelledby="errorSummary-heading">
                        <h2 id="error-summary-title" class="govuk-error-summary__title">There is a problem</h2>
                        <div class="govuk-error-summary__body">
                            <ul class="govuk-list govuk-error-summary__list">
                                <li>
                                    <a href="#">@TempData["NTI.Message"]</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }

                <h1 class="govuk-heading-l">
                    <span class="govuk-caption-m">Case ID @RouteData.Values["urn"]</span>
                    Close NTI
                </h1>

                <form role="form" method="post" id="add-nti-wl-form" novalidate>

                    @* date *@
                    <div class="govuk-form-group govuk-!-margin-top-9">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                <h2 class="govuk-heading-m">Date NTI closed</h2>
                            </legend>
                            <div class="govuk-date-input" id="dtr">
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" for="dtr-day">
                                            Day
                                        </label>
                                        <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="dtr-day"
                                           name="dtr-day" type="text" maxlength="2" inputmode="numeric" value="@($"{Model.Nti?.DateStarted?.Day:00}")" />
                                    </div>
                                </div>
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" for="dtr-month">
                                            Month
                                        </label>
                                        <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="dtr-month"
                                           name="dtr-month" type="text" maxlength="2" inputmode="numeric" value="@($"{Model.Nti?.DateStarted?.Month:00}")" />
                                    </div>
                                </div>
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" for="dtr-year">
                                            Year
                                        </label>
                                        <input class="govuk-input govuk-date-input__input govuk-input--width-4" id="dtr-year"
                                           name="dtr-year" type="text" maxlength="4" inputmode="numeric" value="@($"{Model.Nti?.DateStarted?.Year}")" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    @* Notes *@
                    <div class="govuk-character-count govuk-!-margin-top-9" data-module="govuk-character-count" data-maxlength="@Model.NotesMaxLength">
                        <div class="govuk-form-group">
                            <h2 class="govuk-heading-m">Finalise notes</h2>
                            <textarea class="govuk-textarea govuk-js-character-count concern-auto-resize" id="nti-notes" name="nti-notes" rows="3" aria-describedby="nti-notes-info">@(Model.Nti.Notes ?? string.Empty)</textarea>
                        </div>
                        <div id="nti-notes-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                            You can enter up to @Model.NotesMaxLength characters
                        </div>
                    </div>

                    <div class="govuk-button-group">
                        <button data-prevent-double-click="true" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button" role="button" id="add-nti-wl-button">
                            Close NTI: Notice to improve
                        </button>
                        <partial name="_Cancel" />
                    </div>

                </form>
            }


            <script type="application/javascript" nonce="@nonce">
                $(function () {
                    let validator = formValidator($("#add-nti-wl-form")[0]);

                    validator.addValidator('status', [{
                            method: function(field) {
                                return ((typeof(field) != "undefined") && field.value.trim().length > 0);
                            },
                            message: 'Please select a reason for closing the Warning letter'
                        }]);
                    autoResizer();
                });
            </script>

        </div>
    </div>
</div>

