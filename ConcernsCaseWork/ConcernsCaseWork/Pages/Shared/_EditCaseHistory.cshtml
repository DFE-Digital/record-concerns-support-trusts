@model ConcernsCaseWork.Models.CaseModel

<div class="govuk-character-count govuk-!-margin-top-9" data-module="govuk-character-count" data-maxlength="4000">
	<div class="govuk-form-group">
		<textarea class="govuk-textarea govuk-js-character-count concern-auto-resize" asp-for="CaseHistory" rows="3" aria-describedby="case-history">@Model.CaseHistory</textarea>
	</div>

	<div id="case-history-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
		You can enter up to 4000 characters
	</div>
</div>