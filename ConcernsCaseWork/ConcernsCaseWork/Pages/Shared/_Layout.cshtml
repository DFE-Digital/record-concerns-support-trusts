@using ConcernsCaseWork.Constants
@using ConcernsCaseWork.Models
@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Hosting
@using Microsoft.Extensions.Options
@using Microsoft.Extensions.Configuration
@using NetEscapades.AspNetCore.SecurityHeaders

@inject IWebHostEnvironment _env
@inject IConfiguration Configuration

@{
    var notificationBannerMessage = Configuration["NotificationBannerMessage"];
    bool.TryParse(Configuration["ApplicationInsights:BrowserAnalyticsEnabled"], out bool enableAppInsightsBrowserAnalytics);
    var authenticatedUserId = Context.User.Identity is not null && Context.User.Identity.IsAuthenticated ? Context.User.Identity.Name ?? "Unknown" : "Anonymous";
}

<!DOCTYPE html>
<html lang="en" class="govuk-template govuk-template--rebranded">
@{
    var nonce = Context.GetNonce();
    bool.TryParse(Context.Request.Cookies[CookieConstants.CookieConsentName], out bool hasConsented);

    var classCurrentPage = "govuk-service-navigation__item--active";

    var path = Context.Request.Path;

    var yourCasesTabCurrent = "";
    var otherCasesTabCurrent = "";
    var findTrustTabCurrent = "";

    var model = ViewBag.LayoutModel as LayoutModel;

    if (model != null)
    {
        yourCasesTabCurrent = model.YourCasesTabActive == true ? classCurrentPage : "";
        otherCasesTabCurrent = model.OtherCasesTabActive == true ? classCurrentPage : "";
        findTrustTabCurrent = model.FindTrustTabActive == true ? classCurrentPage : "";
    }
}
<head>
    @if (_env.IsProduction() && hasConsented)
    {
        <!-- Google Tag Manager -->
        <script nonce="@nonce">
            (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
            'gtm.start':
            new Date().getTime(), event: 'gtm.js'
            }); let f = d.getElementsByTagName(s)[0],
            j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
            'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
            })(window, document, 'script', 'dataLayer', 'GTM-NGC8DRV');
        </script>
        <!-- End Google Tag Manager -->
    }

    @if (hasConsented && enableAppInsightsBrowserAnalytics)
    {
        <!-- Application Insights -->
        <script type="text/javascript" integrity="sha384-g/ZkzetdQypWdY0NBZT5r2L3BR9/hURD8OBcd1rEaBpgX6QC7EaTL+o+mzWrBcXW" crossorigin="anonymous" src="https://js.monitor.azure.com/scripts/b/ext/ai.clck.2.8.18.min.js"></script>
        <script type="text/javascript" nonce="@nonce">
            @Html.Raw(JavaScriptSnippet.ScriptBody)
            // Load the Click analytics plugin
            var clickPluginInstance = new Microsoft.ApplicationInsights.ClickAnalyticsPlugin();
            window.appInsights.setAuthenticatedUserContext("@authenticatedUserId", null, true);
        </script>
        <!-- End Application insights -->
    }

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="theme-color" content="#0b0c0c">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta property="og:image" content="~/assets/images/govuk-opengraph-image.png">

    <link rel="manifest" href="/assets/rebrand/manifest.json?v=5.10.0">
    <meta property="og:image" content="/assets/rebrand/images/govuk-opengraph-image.png">

    <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="/assets/rebrand/images/favicon.ico" type="image/x-icon">
    <link rel="mask-icon" href="/assets/rebrand/images/govuk-icon-mask.svg" color="#1d70b8">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/govuk-apple-touch-icon-180x180.png">
    <link rel="apple-touch-icon" sizes="167x167" href="/assets/images/govuk-apple-touch-icon-167x167.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/assets/images/govuk-apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" href="/assets/images/govuk-apple-touch-icon.png">
    <link rel="stylesheet" href="~/dist/css/site.css" asp-append-version="true" />

    <title>@ViewData["Title"] - Record concerns and support for trusts - GOV.UK</title>
</head>
<body class="govuk-template__body js-enabled govuk-frontend-supported">
    <!-- Google Tag Manager (noscript) -->
    <noscript nonce="@nonce">
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NGC8DRV" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <script src="~/dist/vendor/jquery.min.js" nonce="@nonce"></script>
    <script nonce="@nonce">document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

    <partial name="_EnvironmentBanner" />

    <partial name="_CookiesBanner" />

    @if (!string.IsNullOrWhiteSpace(notificationBannerMessage))
    {
        <div class="govuk-extra-width-container">
            <govuk-notification-banner>
                <govuk-notification-banner-title>
                    Important
                </govuk-notification-banner-title>
                <p>
                    @notificationBannerMessage
                </p>
            </govuk-notification-banner>
        </div>
    }

    <header class="govuk-header" role="banner" data-module="govuk-header" data-govuk-header-init="">
        <div class="govuk-header__container govuk-extra-width-container">
            <div class="govuk-header__logo">
                <a class="govuk-header__link govuk-header__link--homepage" href="/">
                    <img src="/assets/department-for-education_white.png" alt="Department for Education" class="govuk-header__logotype">
                </a>
            </div>
        </div>
    </header>

    <section aria-label="Service information" class="govuk-service-navigation" data-module="govuk-service-navigation" data-govuk-service-navigation-init="">
        <div class="govuk-extra-width-container">
            <div class="govuk-service-navigation__container">
                <span class="govuk-service-navigation__service-name" data-testid="go-to-home">
                    <a href="/" class="govuk-service-navigation__link">
                        Record concerns and support for trusts
                    </a>
                </span>
                <nav aria-label="Menu" class="govuk-service-navigation__wrapper">
                    <button type="button" class="govuk-service-navigation__toggle govuk-js-service-navigation-toggle" aria-controls="navigation" hidden="">
                        Menu
                    </button>
                    <ul class="govuk-service-navigation__list" id="navigation">
                        <li class="govuk-service-navigation__item @yourCasesTabCurrent">
                            <a class="govuk-service-navigation__link" aria-current="true" href="/">
                                <strong class="govuk-service-navigation__active-fallback">Your cases</strong>
                            </a>
                        </li>
                        <li class="govuk-service-navigation__item @otherCasesTabCurrent">
                            <a class="govuk-service-navigation__link" href="/TeamCasework" data-testid="team-casework-tab">
                                Other cases
                            </a>
                        </li>
                        <li class="govuk-service-navigation__item @findTrustTabCurrent">
                            <a class="govuk-service-navigation__link" href="/trust">
                                Find a trust
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>

    <div class="govuk-phase-banner">
        <div class="govuk-extra-width-container">
            <p class="govuk-phase-banner__content">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    beta
                </strong>
                <span class="govuk-phase-banner__text">
                    This is a new service – your <a class="govuk-link" rel="noopener noreferrer" href="https://forms.office.com/Pages/ResponsePage.aspx?id=yXfS-grGoU2187O4s0qC-SZtRygfwTNOqcfRq-MXpv9UOTIyQlNYR0hJT1Q0TUFVSlJGVFhES01LVC4u" target="_blank">feedback<span class="govuk-visually-hidden"> (opens in new tab)</span></a> will help us to improve it.
                </span>
            </p>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    @await RenderSectionAsync("SubHeading", required: false)

    <div class="govuk-extra-width-container">
        @await RenderSectionAsync("BeforeMain", required: false)
    </div>

    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
        <div class="govuk-extra-width-container">
            @RenderBody()
        </div>
    </main>

    <partial name="_Footer" />

    <script src="~/dist/main.js" nonce="@nonce"></script>
    <script src="~/dist/autocomplete/accessible-autocomplete.min.js" nonce="@nonce"></script>
    @* <script src="~/assets/govuk-frontend.min.js" nonce="@nonce"></script> *@
</body>
</html>
