@page "/TeamCasework"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ConcernsCaseWork.Pages.TeamCaseworkPageModel

@{
    ViewData["Title"] = "Home";
}

<div class="govuk-extra-width-container">
    @if (!string.IsNullOrEmpty((string)TempData.Peek("Error.Message")))
    {
        <partial name="_BannerError" />
        <partial name="_Error" />
    }
    else
    {
        <div class="govuk-!-margin-top-0">
            <div class="govuk-tabs govuk-!-margin-top-6">
                <ul class="govuk-tabs__list">
                    <li class="govuk-tabs__list-item">
                        <a class="govuk-tabs__tab" asp-page="/Home" role="button">
                            Your casework
                        </a>
                    </li>
                    <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
                        <a class="govuk-tabs__tab" asp-page="/TeamCasework" role="button">
                            Team casework
                        </a>
                    </li>
                </ul>

	            <div class="govuk-tabs__panel" id="team-casework">
                    <div class="govuk-button-group flexalign__right">
                        <a class="govuk-button govuk-button--secondary" asp-page="/team/selectColleagues" role="button">
                            Select Colleagues
                        </a>
                    </div>
                    <!-- Team casework -->
                    <partial name="_CasesTeamActive" model="Model.ActiveTeamCases" />
                </div>
            </div>
        </div>
    }
</div>






